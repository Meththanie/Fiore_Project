  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fffefc;
  padding: 0 1rem;
  animation: fadeInZoom 1s ease-out forwards;
}

    header.hero h1 {
      font-size: 3.2rem;
      margin-bottom: 0.5rem;
      letter-spacing: 1px;
    }

    header.hero p {
      font-size: 1.2rem;
      max-width: 600px;
