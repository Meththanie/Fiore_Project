  .card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    flex-shrink: 0;
  }
  
  .card-content {
    padding: 1rem;
  }
  
  .card-content h3 {
    margin: 0 0 0.5rem;
    color: #d730e7;
    font-size: 1.25rem;
  }
  
  .card-content p {
    margin: 0;
    color: #555;
