<script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
<script>
    (function(){
        emailjs.init("o4O8u_uz0lth6hNPL"); // Replace with your EmailJS User ID
    })();

    let selectedService = null;

    // Handle service button selection
    document.querySelectorAll('.service-buttons .service-btn').forEach(button => {
        button.addEventListener('click', () => {
            document.querySelectorAll('.service-buttons .service-btn').forEach(btn => btn.classList.remove('selected'));
            button.classList.add('selected');
            selectedService = button.textContent;
        });
    });

    // Handle form submission
    document.querySelector('.submit-button').addEventListener('click', (e) => {
        e.preventDefault();

        const name = document.getElementById('name').value.trim();
        const email = document.getElementById('email').value.trim();

        if (!name || !email || !selectedService) {
            alert('Please fill in all fields and select a service.');
            return;
        }

        const templateParams = {
            name: name,
            email: email,
            service: selectedService,
            to_email: 'fioreofficialproject@gmail.com'
        };

        emailjs.send('service_8azcx5c', 'template_vxwlals', templateParams)
            .then(() => {
                alert('Request submitted successfully!');
                document.getElementById('name').value = '';
                document.getElementById('email').value = '';
                selectedService = null;
                document.querySelectorAll('.service-buttons .service-btn').forEach(btn => btn.classList.remove('selected'));
            }, (error) => {
                alert('Failed to send request. Please try again later.');
                console.error('EmailJS error:', error);
            });
    });
</script>

