  <!-- âœ… JavaScript logic -->
  <script>
    const cardDetails = document.getElementById('card-details-babefooddrink');

    const detailsMap = {
      teddy: {
        title: "Whimsical Teddy Bear",
        content: `
          <p>Soft, serene, and irresistibly charming â€” the Whimsical Teddy Bear cake is a perfect centerpiece for baby showers and first birthdays. Delicate layers of vanilla sponge are wrapped in a silky, pastel fondant, crowned by an intricately handcrafted teddy bear figurine made from sugar paste. The gentle hues and plush details evoke warmth, innocence, and celebration.</p>
          <h4>Expert Advice from FIORE:</h4>
          <ul>
            <li>Pair your cake with plush stuffed bears, cloud-shaped candles, and soft organza runners.</li>
            <li>Accent with fondant baby blocks or name initials for personalization.</li>
            <li>Add edible pearl dust for a subtle magical shimmer.</li>
            <li>Display on a ruffled cake stand or with faux flowers for extra charm.</li>
          </ul>
          <h4>Color Palette</h4>
          <ul>
            <li><strong>Blush Pink:</strong> #f8c8dc</li>
            <li><strong>Creamy Vanilla:</strong> #fdf7f2</li>
            <li><strong>Dusty Blue:</strong> #c2d8e9</li>
            <li><strong>Misty Lavender:</strong> #d8cde3</li>
            <li><strong>Warm Taupe:</strong> #b49f91</li>
          </ul>
          <div class="cake-gallery-babefooddrink">
            <div class="cake-image-babefooddrink">
              <img src="/img/.jpg" alt="Front View of Teddy Bear Cake">
              <p>Front view showing delicate fondant layers and centerpiece figurine.</p>
            </div>
            <div class="cake-image-babefooddrink">
              <img src="/img/teddy-bear-top.jpg" alt="Top View of Cake">
              <p>Top view reveals detail in the bearâ€™s face, floral accents, and textures.</p>
            </div>
            <div class="cake-image-babefooddrink">
              <img src="/img/teddy-bear-scene.jpg" alt="Cake in Themed Display">
              <p>Styled on a dessert table with pastel props and soft toys to match the theme.</p>
            </div>
          </div>
        `
      },
      floral: {
        title: "Elegant Florals",
        content: "Inspired by garden weddings, this cake is adorned with edible roses and peonies in soft shades, giving it a romantic and elegant look."
      },
      surprise: {
        title: "Surprise Inside!",
        content: "The perfect gender reveal cake! White frosting hides either pink or blue layers, keeping the surprise until the first cut."
      }
    };

    document.querySelectorAll('.card-babefooddrink').forEach(card => {
      card.addEventListener('click', () => {
        const key = card.getAttribute('data-key');
        const info = detailsMap[key];

        if (info) {
          cardDetails.innerHTML = `
            <h3>${info.title}</h3>
            ${info.content}
          `;
          cardDetails.classList.remove('hidden');
          cardDetails.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });
  </script>
</body>
</html>
