    body {
      font-family: 'MonterchiSerifLight';
      margin: 0;
      padding: 0;
      background: rgb(219, 217, 217);
      color: #333;
    }

    /* Hero Section */
    .hero {
        background: linear-gradient(rgba(25, 25, 112, 0.3), rgba(192, 192, 192, 0.6)),
            url('img/birthdayfood.jpg') no-repeat center center/cover;

  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fffefc;
  padding: 0 1rem;
  animation: fadeInZoom 1s ease-out forwards;
}

    .hero h1 {
      font-size: 3.5rem;
      margin: 0;
      font-weight: 700;
      letter-spacing: 1px;
    }

    .hero p {
      font-size: 1.2rem;
      margin: 1rem 0;
      line-height: 1.5;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
    .container {
      padding: 2rem;
      max-width: 1200px;
      margin: auto;
    }

    .category-section {
      margin-bottom: 3rem;
    }

    .category-section h2 {
      font-size: 2rem;
      color: #ff5d8f;
      border-left: 5px solid #ff5d8f;
      padding-left: 0.75rem;
      margin-bottom: 1.2rem;
    }

    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.5rem;
    }

    .card {
      background-color: #fff;
      border-radius: 1rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      text-align: center;
      overflow: hidden;
      transition: transform 0.2s ease;
      padding: 1.5rem;
    }

    .card:hover {
      transform: scale(1.05);
    }

    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 1rem;
    }

    .card p {
      margin-top: 1rem;
      font-size: 1.2rem;
      color: #333;
    }

    .center-btn {
     text-align: center;
}
    .center-btn button {
      background-color: navy;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        justify-content: center;
